{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@routers/*": ["./src/routers/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*", "src/custom.d.ts"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
